{
  "realm": "ecommerce",
  "enabled": true,
  "displayName": "E-Commerce Platform Realm",
  "requireSsl": "none",

  "passwordPolicy": "length(8) and digits(1) and upperCase(1)",

  "roles": {
    "realm": [
      { "name": "USER", "description": "Standard user role" },
      { "name": "ADMIN", "description": "Admin role with elevated privileges" },
      { "name": "SUPER_ADMIN", "description": "Root-level access for system operations" }
    ]
  },

  "clients": [
    {
      "clientId": "api-gateway",
      "name": "API Gateway",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "CHANGE_ME_GATEWAY_SECRET",
      "protocol": "openid-connect",
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "bearerOnly": false,
      "redirectUris": ["*"],
      "webOrigins": ["*"],
      "protocolMappers": [
        {
          "name": "username",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "config": {
            "user.attribute": "username",
            "claim.name": "preferred_username",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "realm_roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "email",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "config": {
            "user.attribute": "email",
            "claim.name": "email",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    },

    {
      "clientId": "angular-frontend",
      "name": "Angular SPA Frontend",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "redirectUris": [
        "http://localhost:4200/*",
        "http://127.0.0.1:4200/*"
      ],
      "webOrigins": [
        "http://localhost:4200",
        "http://127.0.0.1:4200"
      ],
      "attributes": {
        "post.logout.redirect.uris": "+"
      },
      "protocolMappers": [
        {
          "name": "realm_roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],

  "users": [
    {
      "username": "admin",
      "email": "admin@ecommerce.local",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "Admin@123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN", "SUPER_ADMIN"]
    },
    {
      "username": "testuser",
      "email": "test@ecommerce.local",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "User@123",
          "temporary": false
        }
      ],
      "realmRoles": ["USER"]
    }
  ]
}
